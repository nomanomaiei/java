package standard;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Reservation {
	public static void main(String[] args) throws IOException {

		int i;

		// 初期値30は最初は全部座席が空いている設定
		int count = 30;

		// 座席の空きをtrue/falseで判別する
		boolean[] seat = new boolean[30];

		// 既に予約されている座席(座席番号の偶数:false)//
		// 空いてるのは奇数:true//
		for (i = 0; i <= 29; i++) {
			if ((i + 1) % 2 == 0) {
				seat[i] = false;
			} else {
				seat[i] = true;
				// 予約後は予約済みにするためにcount--;//
				count--;
			}
		}

		System.out.println("ようこそ浅草ジャマイカホールへ!\n\n");

		// 予約可能な席がある限り実行する(count>0)//
		while (count > 0) {
			// 予約されている座席の数の確認
			if (count == 0) {
				System.out.println("完売しています");
			} else if (count < 15) {
				System.out.println("残りあと数席です。");
			} else {
				System.out.println("まだ余裕があります。");
			}

			// 予約始め
			System.out.println("何番の座席を予約しますか? (1～30)");
			System.out.print("<");

			BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));

			String str = reader.readLine();
			int num = Integer.parseInt(str);

			// 予約したい座席が空いているかどうか//
			if (seat[num - 1] == true) {
				System.out.println("座席の予約が完了しました。");
				seat[num - 1] = false;
				count--;
			} else {
				System.out.println("*予約済みの座席です。他の座席を選択しやがれください");
			}
		}
	}
}
