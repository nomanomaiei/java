package question10;

public class Question10_10 {

	public static void main(String[] args) {
		int i, j;

		for (i = 1; i < 9; i++) {
			for (j = 8; j > i; j--) {
				System.out.print("　");
			}
			for (j = 0; j < i * 2 - 1; j++) {
				if (i % 2 == 1) {
					System.out.print("■");
				} else {
					System.out.print("□");
				}
			}
			System.out.println("\n");
		}
	}
}
